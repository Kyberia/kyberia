{% extends '_layouts/main.html.twig' %}

{% block content %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Welcome to Symfony <small>{{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</small></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <p>Your application is now ready. You can start working on it at: <code>{{ base_dir }}/</code></p>
        </div>
    </div>
{% endblock %}
