{% extends '_layouts/base.html.twig' %}

{% set bodyClass = 'fixed sidebar-mini' %}

{% block body %}
    <div class="wrapper">
        {% include '_layouts/_header.html.twig' %}

        <aside class="main-sidebar">
            <section class="sidebar">
                {{ knp_menu_render('main', {template:'_menu/sidebar-menu.html.twig'}) }}
            </section>
        </aside>

        <div class="content-wrapper">
            {% if contentHeader|default(false) %}
                <section class="content-header">
                    <h1>{{ contentHeader }}</h1>
                    {#
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="active">Dashboard</li>
                    </ol>
                    #}
                </section>
            {% endif %}

            <main class="content">
                {% block content %}{% endblock %}
            </main>
        </div>

        {% include '_layouts/_footer.html.twig' %}
        {% include '_layouts/_control-sidebar.html.twig' %}
    </div>
{% endblock %}
